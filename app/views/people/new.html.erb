<h1> New Person </h1>
<%= form_for :person, url: people_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :group %><br>
    <%= f.text_area :group %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', people_path %>
