<h1>Listing of Tags</h1>
 
<table class ="table table-bordered">
  <tr>
    <th>Tag Keywords: </th>
    <th colspan = "3">Related Projects: </th>
  </tr>
 
  <% @tags.reverse.each do |tag| %>
  <tr>
    <td> <%= tag.keyword %> </td>
    <td>
      <%= tag.projects.map{|project| " " + project.name }.join(",")%>
    </td>
    <td>
       <%= link_to '', edit_tag_path(tag), {class: "glyphicon glyphicon-pencil" } %> 
   

    </td>

    <td> <%= link_to '', tag_path(tag),
              method: :delete, class: "glyphicon glyphicon-trash" %> </td>
  </tr>
  <% end %>
</table>

 
